{
  "name": "@playwright-kit/auth",
  "version": "0.2.1",
  "description": "Small, production-ready authentication utilities for Playwright.",
  "license": "MIT",
  "sideEffects": false,
  "bin": {
    "playwright-kit": "dist/bin/playwright-kit.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/romradchenko/playwright-kit.git",
    "directory": "packages/auth"
  },
  "bugs": {
    "url": "https://github.com/romradchenko/playwright-kit/issues"
  },
  "homepage": "https://github.com/romradchenko/playwright-kit/tree/main/packages/auth#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "playwright",
    "auth",
    "e2e",
    "storageState"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "node scripts/rm-dist.mjs && tsc -p tsconfig.build.json",
    "prepack": "npm run build",
    "typecheck": "tsc -p tsconfig.build.json --noEmit && tsc -p tsconfig.type-tests.json",
    "test": "node --test --import tsx src/__tests__/all.test.ts"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.40.0",
    "playwright": ">=1.40.0"
  },
  "peerDependenciesMeta": {
    "@playwright/test": {
      "optional": true
    }
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "tsx": "^4.20.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@playwright/test": "^1.40.0",
    "typescript": "^5.7.3"
  }
}
